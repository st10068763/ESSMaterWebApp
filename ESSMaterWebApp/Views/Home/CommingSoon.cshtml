
@{
    ViewData["Title"] = "CommingSoon";
}

<h1>CommingSoon</h1>

<div class="coming-soon-container">
    <h1 class="coming-soon-title">Coming Soon</h1>
    <p class="coming-soon-description">This feature is under development and will be available soon. Stay tuned!</p>
    <a href="/" class="btn btn-primary">Back to Home</a>
</div>

@section Styles {
    <style>
        .coming-soon-container {
            text-align: center;
            padding: 50px;
            background: linear-gradient(135deg, #ff7f50, #ffcc00);
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            color: #fff;
            margin: 50px auto;
            max-width: 600px;
        }

        .coming-soon-title {
            font-size: 2.5rem;
            font-weight: bold;
        }

        .coming-soon-description {
            font-size: 1.2rem;
            margin: 20px 0;
        }

        .btn-primary {
            background-color: #ffcc00;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            color: #fff;
            text-decoration: none;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #ff7f50;
                transform: scale(1.05);
            }
    </style>
}