@{
    ViewData["Title"] = "Contact Us";
}


<section id="contact-us" class="contact-us-section">
    <h1>Contact Us</h1>
    <p>If you have any questions, feedback, or need assistance, feel free to reach out to us. We'd love to hear from you!</p>

    <!-- Contact Form -->
    <form class="contact-form" action="/Home/SubmitContactForm" method="post">
        <div class="form-group">
            <label for="name">Your Name</label>
            <input type="text" id="name" name="name" placeholder="Enter your name" required />
        </div>

        <div class="form-group">
            <label for="email">Your Email</label>
            <input type="email" id="email" name="email" placeholder="Enter your email" required />
        </div>

        <div class="form-group">
            <label for="subject">Subject</label>
            <select id="subject" name="subject" required>
                <option value="inquiry">General Inquiry</option>
                <option value="support">Support</option>
                <option value="feedback">Feedback</option>
                <option value="partnership">Partnership</option>
            </select>
        </div>

        <div class="form-group">
            <label for="message">Your Message</label>
            <textarea id="message" name="message" placeholder="Enter your message" rows="5" required></textarea>
        </div>

        <div class="form-group">
            <label for="phone">Your Phone Number (optional)</label>
            <input type="tel" id="phone" name="phone" placeholder="Enter your phone number" />
        </div>

        <button type="submit" class="btn">Send Message</button>
    </form>

    <!-- Contact Details -->
    <div class="contact-details">
        <h3>Our Contact Details</h3>
        <p>If you prefer, you can also reach us through the following channels:</p>
        <ul>
            <li><strong>Phone:</strong> +27 68 503 5965</li>
            <li><strong>Email:</strong> Ann.Ligman@outlook.com</li>
            <li><strong>Address:</strong> 6 Maud Sumner Close., Stellenbosch, South Africa</li>
        </ul>
    </div>

    <!-- Map Section -->
    <div class="map-section">
        <h3>Visit Us</h3>
        <p>Find our office location on the map below:</p>
        <div id="map"></div>

        <script>
            var map;
            function initMap() {
                map = new google.maps.Map(document.getElementById("map"), {                    
                    center: { lat: -33.93462, lng: 18.86676 },
                    zoom: 8
                });
                var marker = new google.maps.Marker({
                    position: location,
                    map: map,
                    title: "Our Organization's Location"
                });
            }
        </script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAX3OwYKxsjNTjdlr6qg4FsX8UMj1rgEnw&callback=initMap" async defer></script>
    </div>

    <!-- Social Media Links -->
    <div class="social-media">
        <h3>Follow Us</h3>
        <p>Stay connected with us on social media:</p>
        <div class="social-media">
            <h3>Follow Us</h3>
            <p>Stay connected with us on social media:</p>
            <div class="social-icons">
                <a href="https://facebook.com/ourorganization" target="_blank" class="social-link">
                    <img src="./images/facebook.gif" alt="Facebook" class="social-icon" /> Facebook
                </a>
                <a href="https://twitter.com/ourorganization" target="_blank" class="social-link">
                    <img src="./images/twitter.gif" alt="Twitter" class="social-icon" /> Twitter
                </a>
                <a href="https://instagram.com/ourorganization" target="_blank" class="social-link">
                    <img src="./images/instagram.gif" alt="Instagram" class="social-icon" /> Instagram
                </a>
                <a href="https://linkedin.com/company/ourorganization" target="_blank" class="social-link">
                    <img src="./images/linkedin.gif" alt="LinkedIn" class="social-icon" /> LinkedIn
                </a>
            </div>
        </div>
    </div>
</section>


<style>
    /* Map Styling */
    .map-section {
        margin-top: 40px;
    }

    #map {
        width: 100%; 
        height: 400px;
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }
</style>