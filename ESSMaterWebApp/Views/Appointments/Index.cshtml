@model IEnumerable<ESSMaterWebApp.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<h1 class="page-title">Appointments</h1>

<p class="create-new-link">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<!-- Container for repeating items -->
<div class="appointment-list">
    @foreach (var item in Model)
    {
        <div class="appointment-card card mb-3">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title">@item.ServiceType</h5>
            </div>
            <div class="card-body">
                <p><strong>First Name:</strong> @item.FirstName</p>
                <p><strong>Surname:</strong> @item.Surname</p>
                <p><strong>Email Address:</strong> @item.EmailAddress</p>
                <p><strong>Phone Number:</strong> @item.PhoneNumber</p>
                <p><strong>Country:</strong> @item.Country</p>
                <p><strong>Province:</strong> @item.Province</p>
                <p><strong>City:</strong> @item.City</p>
                <p><strong>Suburb:</strong> @item.Suburb</p>
                <p><strong>Submission Date:</strong> @item.SubmissionDate</p>
                <p><strong>Appointment Date:</strong> @item.AppointmentDate</p>
            </div>
            <div class="card-footer">
                <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@item.AppointmentId">Edit</a>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.AppointmentId">Details</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.AppointmentId">Delete</a>
            </div>
        </div>
    }
</div>

<!-- Add some styling to the cards -->
<style>
    .appointment-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .appointment-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
    }

    .card-header {
        background-color: #5c6bc0;
        color: white;
        font-size: 1.25rem;
    }

    .card-body p {
        font-size: 1rem;
    }

    .card-footer {
        display: flex;
        justify-content: space-between;
    }

    .btn {
        padding: 8px 12px;
    }
</style>
