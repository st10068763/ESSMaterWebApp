@model ESSMaterWebApp.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

<h1 class="page-title">Create Appointment</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Create" class="appointment-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Service Type -->
            <div class="form-group">
                <label asp-for="ServiceType" class="control-label">Service Type</label>
                <select asp-for="ServiceType" class="form-control">
                    <option value="Option1">Mentoring</option>
                    <option value="Option2">Coaching</option>
                    <option value="Option3">Advisory service</option>
                </select>
                <span asp-validation-for="ServiceType" class="text-danger"></span>
            </div>

            <!-- First Name -->
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <!-- Surname -->
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Surname</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <!-- Email Address -->
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label">Email Address</label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <!-- Phone Number -->
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Appointment Type (Online or Physical) -->
            <div class="form-group">
                <label class="control-label">Appointment Type</label>
                <div class="form-check">
                    <input type="radio" class="form-check-input" id="onlineAppointment" name="AppointmentType" value="Online" />
                    <label class="form-check-label" for="onlineAppointment">Online</label>
                </div>
                <div class="form-check">
                    <input type="radio" class="form-check-input" id="physicalAppointment" name="AppointmentType" value="Physical" />
                    <label class="form-check-label" for="physicalAppointment">Physical</label>
                </div>
            </div>

            <!-- Date and Time Selection for Online Appointment -->
            <div id="onlineAppointmentDetails" style="display: none;">
                <div class="form-group">
                    <label for="AppointmentDate">Select Available Time for Online Appointment</label>
                    <input type="datetime-local" asp-for="AppointmentDate" class="form-control" />
                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                </div>
            </div>

            <!-- Address for Physical Appointment -->
            <div id="physicalAppointmentDetails" style="display: none;">
                <div class="form-group">
                    <label class="control-label">Appointment Address</label>
                    <input type="text" class="form-control" value="6 Maud Sumner Close., Stellenbosch, South Africa" disabled />
                </div>
            </div>
            
            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create Appointment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@*--------- Display only for  -+- Admin -+- *@
@if (User.IsInRole("Admin"))
{
    <div class="go-back-link">
        <a class="btn btn-secondary" asp-action="Index">Go Back</a>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Show appropriate fields based on the appointment type selected
        document.querySelectorAll('input[name="AppointmentType"]').forEach((radio) => {
            radio.addEventListener('change', function () {
                if (this.value === 'Online') {
                    document.getElementById('onlineAppointmentDetails').style.display = 'block';
                    document.getElementById('physicalAppointmentDetails').style.display = 'none';
                } else if (this.value === 'Physical') {
                    document.getElementById('physicalAppointmentDetails').style.display = 'block';
                    document.getElementById('onlineAppointmentDetails').style.display = 'none';
                }
            });
        });
    </script>
}
