@model ESSMaterWebApp.Models.MediaContent

@{
    ViewData["Title"] = "Create Media Content";
}

<h1 class="page-title">Create Media Content</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Create" class="media-content-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Media Title -->
            <div class="form-group">
                <label asp-for="MediaTitle" class="control-label">Media Title</label>
                <input asp-for="MediaTitle" class="form-control" />
                <span asp-validation-for="MediaTitle" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Media Type -->
            <div class="form-group">
                <label asp-for="Type" class="control-label">Media Type</label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <!-- Media URL -->
            <div class="form-group">
                <label asp-for="Url" class="control-label">Media URL</label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create Media Content" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="go-back-link">
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
